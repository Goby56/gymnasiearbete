{
    "setup": {
        "structure": {
            "nodes": [784, 128, 128, 47],
            "activations": ["ReLU", "ReLU", "Softmax"]
        }
    },

    "training": {
        "accuracy_function": "Categorical",
        "loss_function": "CCE",
        "optimizer": {
            "function": "Adam",
            "args": {
                "learn_rate": 0.001,
                "beta_1": 0.9,
                "beta_2": 0.999,
                "epsilon": 10e-8,
                "decay": 0.001
            }
        },

        "dataset": "emnist-balanced.mat",
        "batch_size": 256,
        "epochs": -1,
        
        "data_augmentation": {
            "noise": false,
            "shift": false,
            "rotate": false
        }
    }
}